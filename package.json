{
  "name": "@matbee/libreoffice-converter",
  "version": "1.3.2",
  "description": "LibreOffice WASM document conversion toolkit - headless document format conversion",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./browser": {
      "types": "./dist/browser.d.ts",
      "import": "./dist/browser.js",
      "default": "./dist/browser.js"
    },
    "./server": {
      "types": "./dist/server.d.ts",
      "import": "./dist/server.js",
      "require": "./dist/server.cjs",
      "default": "./dist/server.js"
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      "browser": [
        "./dist/browser.d.ts"
      ],
      "server": [
        "./dist/server.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "wasm/loader.cjs",
    "wasm/soffice.cjs",
    "wasm/soffice.js",
    "wasm/soffice.data",
    "wasm/soffice.data.js.metadata",
    "wasm/soffice.wasm",
    "wasm/soffice.worker.cjs",
    "wasm/soffice.worker.js",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "build:wasm": "bash build/build-native.sh",
    "dev": "tsx watch src/server.ts",
    "dev:browser": "node dev-server.mjs",
    "start": "node dist/server.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:browser": "playwright test",
    "test:browser:ui": "playwright test --ui",
    "test:browser:headed": "playwright test --headed",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "libreoffice",
    "wasm",
    "webassembly",
    "document",
    "conversion",
    "pdf",
    "docx",
    "xlsx",
    "pptx",
    "odt",
    "ods",
    "odp"
  ],
  "author": "",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matbeedotcom/libreoffice-document-converter.git"
  },
  "bugs": {
    "url": "https://github.com/matbeedotcom/libreoffice-document-converter/issues"
  },
  "homepage": "https://github.com/matbeedotcom/libreoffice-document-converter#readme",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "playwright": "^1.57.0",
    "tsup": "^8.0.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  }
}
